{
  "compilerOptions": {
    "target": "es6",
    "module": "commonJs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}
